source @libdir@/bluealsa_monitor_funcs || exit 1
source @libdir@/bluealsa_alsaconf || exit 1
source @libdir@/bluealsa_pulse || exit 1


bluealsa_print_help() {
	alsaconf_print_help
	pulse_print_help
}

bluealsa_monitor_init() {
	alsaconf_init
	[[ "$bluealsa_monitor_enable_pulse" ]] && pulse_init
}

bluealsa_monitor_start() {
	alsaconf_start
}

bluealsa_pcm_added() {
	alsaconf_pcm_added
	[[ "$bluealsa_monitor_enable_pulse" ]] && pulse_pcm_added
}

bluealsa_pcm_removed() {
	alsaconf_pcm_removed "$1"
	[[ "$bluealsa_monitor_enable_pulse" ]] && pulse_pcm_removed "$1"
}

bluealsa_service_stopped() {
	alsaconf_service_stopped
	[[ "$bluealsa_monitor_enable_pulse" ]] && pulse_service_stopped
}

bluealsa_monitor_finished() {
	alsaconf_finished
	[[ "$bluealsa_monitor_enable_pulse" ]] && pulse_monitor_finished
}


ARGS=$(getopt -o "B:h${alsaconf_shortopts}${pulse_shortopts}" --long dbus:,help --long "$alsaconf_longopts" --long "$pulse_longopts" -n "$0" -- "$@")


[[ $? = 0 ]] || exit 1

eval set -- "$ARGS"

dbus_arg=""

while true; do
  case "$1" in
    -B|--dbus)
		dbus_arg="--dbus=$2"
		srv=",SRV=org.bluealsa.$2"
		shift 2
		;;
    -f|--file)
		alsaconf_conffile="$2"
		shift 2
		;;
	-g|--global)
		alsaconf_global=1
		shift
		;;
    -u|--udev)
		alsaconf_use_udev=1
		shift
		;;
    -d|--default)
		alsaconf_use_default="a2dp,capture,playback"
		shift
		[[ -n "$1" ]] && use_default="$1"
		shift
		;;
    -p|--pulse)
		bluealsa_monitor_enable_pulse=true
		shift
		[[ -n "$1" ]] && pulse_types="$1"
		shift
		;;
	-i|--icon)
		[[ -n "$2" ]] && PULSE_ICON_NAME="$2"
		shift 2
		;;
    -h|--help)
		bluealsa_help
		exit 0
		;;
    *) break ;;
  esac
done

bluealsa_monitor
